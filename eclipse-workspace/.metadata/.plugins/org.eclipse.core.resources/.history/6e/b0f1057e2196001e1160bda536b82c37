package br.com.senaisp.bauru.richard.secao02;

import java.util.Scanner;

public class TestarCalculo {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		CalculosMatematicos calc = new CalculosMatematicos();
		
		System.out.println("Digite o valor a ser invertido:");
		int vlr = sc.nextInt();
		int retorno = calc.inverterValor(vlr);
		System.out.println(retorno);
		
		System.out.println("Digite a temperatura em ºF:");
		double temp = sc.nextDouble();
		double ret = calc.fahrenheit2Celsius(temp);
		System.out.println(ret);
		
		sc.close();
	}

}
